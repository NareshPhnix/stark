.s-form
  .form

      .form-group
        input(type="text", id="project-name" name="project-name", title=translation.form.TITLE_PROJECT_NAME required)
        label(for="project-name")= translation.form.LABEL_PROJECT_NAME

      .form-group
        input(type="text", id="page-title" name="page-title", title=translation.form.TITLE_PAGE_TITLE required)
        label(for="page-title")= translation.form.LABEL_PAGE_TITLE

      .form-group
        input(type="text", id="developer-name" name="developer-name", title=translation.form.TITLE_DEVELOPER_NAME required)
        label(for="developer-name")= translation.form.LABEL_DEVELOPER_NAME

      span#generated-date

.s-meta

  button.button.btn--danger.js-reset-all
    +svg-icon.icon.icon-reset(data-icon-name='reset')
    | #[=translation.form.BUTTON_START_NEW]

  //- TODO: how to translate and where to put this markup?
  button.button.btn--danger.js-save-to-file
    | #[=translation.form.BUTTON_SAVE_TO_FILE]

  //- TODO: how to translate and where to put this markup?
  button.button.btn--danger.js-load-from-file-button
    | #[=translation.form.BUTTON_LOAD_FROM_FILE]
    | #[input(type='file', name='files', accept='.json', hidden).js-load-from-file-input]